<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Management</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
            font-family: 'Arial', sans-serif;
            overflow-x: hidden;
        }

        /* Background image with z-index for layering effect */
        .background {
            background-size: cover;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.1;
        }

        /* Header styling */
        header {
            padding: 20px;
        }

        header h2 {
            color: #fff;
            margin: 0;
        }

        header ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        header ul li {
            display: inline;
            margin-left: 20px;
        }

        header ul li a {
            color: #fff;
            text-decoration: none;
        }

        header ul li a:hover {
            color: #ddd;
        }

        .cards-container {
            display: flex;
            flex-wrap: wrap;
        }

        /* Flip card container */
        .card {
            flex: 0 0 auto;
            width: 250px;
            height: 300px;
            margin-right: 20px;
            margin-bottom: 20px;
            background-color: #222;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
            perspective: 500px;
        }

        .card-inner {
            width: 100%;
            height: 100%;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }

        /* Flip the card on hover */
        .card:hover .card-inner {
            transform: rotateY(180deg);
        }

        /* Front side of the card */
        .card-front,
        .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 10px;
        }

        /* Front side (image) */
        .card-front {
            background-color: #222;
        }

        .card-front img {
            border-radius: 10px;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Back side (details) */
        .card-back {
            background-color: #333;
            color: #fff;
            transform: rotateY(180deg);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            box-sizing: border-box;
        }

        .card-back h6 {
            margin-bottom: 10px;
        }

        .card-back p {
            margin-bottom: 20px;
            color: #bbb;
        }

        /* Action buttons on the back of the card */
        .card-back a {
            display: block;
            color: #fff;
            text-align: center;
            padding: 4px;
            border-radius: 5px;
            margin: 5px 0;
            text-decoration: none;
            /* background-color: #6f42c1; */
            width: 80%;
        }

        .card-back a:hover {
            background-color: #563d7c;
        }
    </style>
</head>

<body>

    <!-- Background image -->
    <div class="background"></div>

    <!-- Header -->
    <header class="d-flex justify-content-between align-items-center">
        <h2 class="ps-4">Movies</h2>
        <ul class="d-flex">
            <li><a href="/">Home</a></li>
            <li><a href="/createMovie">Create</a></li>
        </ul>
    </header>

    <!-- Movie Cards -->
    <div class="container mt-5">
        <div class="cards-container">
            <% data.forEach((t, index)=> { %>
                <div class="card">
                    <div class="card-inner">
                        <!-- Front side: Movie poster -->
                        <div class="card-front">
                            <img src="<%= t.path %>" alt="<%= t.title %>">
                        </div>

                        <!-- Back side: Movie details and action buttons -->
                        <div class="card-back">
                            <h6>
                                <span>Name :</span>
                                <%= t.title %> <span class="fs-6 text-secondary">(<%= t.year %>)</span>
                            </h6>
                            <p>
                                <span>Discription :</span>
                                <%= t.discription %>
                            </p>

                            <a href="/singleMovie/<%= t._id %>">Edit</a>
                            <a href="/deleteMovie/<%= t._id %>">Delete</a>
                            <a href="/selectMovie/<%= t._id %>">Select</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>